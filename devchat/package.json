{
  "name": "devchat",
  "displayName": "DevChat",
  "description": "group chat for developers",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:devchat.loginView",
    "onCommand:devchat.promptLogin"
  ],
  "commands": [
    {
      "command": "devchat.promptLogin",
      "title": "Prompt Login"
    }
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "devchatSidebar",
          "title": "DevChat",
          "icon": "media/chat-icon.svg"
        }
      ]
    },
    "views": {
      "devchatSidebar": [
        {
          "type": "webview",     
          "id": "devchat.loginView",
          "name": "Login"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
